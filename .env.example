# ===================================================================
# ISEB Platform - Environment Variables
# ===================================================================
#
# Copiez ce fichier en .env et personnalisez les valeurs
#   cp .env.example .env
#
# ===================================================================

# -------------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------------
DB_PASSWORD=odoo_secure_password_change_me
DB_HOST=db
DB_PORT=5432
DB_USER=odoo
DB_NAME=odoo

# -------------------------------------------------------------------
# Odoo Configuration
# -------------------------------------------------------------------
ADMIN_PASSWORD=admin_change_me_in_production

# Workers (ajustez selon votre CPU)
# Formule recommandée: (nb_cpu * 2) + 1
WORKERS=4

# Logging
LOG_LEVEL=info

# Ports
ODOO_PORT=8069
LONGPOLLING_PORT=8072

# -------------------------------------------------------------------
# Redis Configuration
# -------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------------------------------------------
# Celery Configuration
# -------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -------------------------------------------------------------------
# Email Configuration (SMTP)
# -------------------------------------------------------------------
# EMAIL_FROM=noreply@iseb.fr
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SSL=True
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# -------------------------------------------------------------------
# Bank Sync Configuration
# -------------------------------------------------------------------
# Budget Insight API
BUDGET_INSIGHT_CLIENT_ID=
BUDGET_INSIGHT_CLIENT_SECRET=
BUDGET_INSIGHT_API_URL=https://api.budgetinsight.com/2.0

# -------------------------------------------------------------------
# E-Invoicing Configuration
# -------------------------------------------------------------------
# Chorus Pro
CHORUS_PRO_API_URL=https://chorus-pro.gouv.fr
CHORUS_PRO_CLIENT_ID=
CHORUS_PRO_CLIENT_SECRET=

# Peppol
PEPPOL_ACCESS_POINT_URL=
PEPPOL_ACCESS_POINT_ID=

# -------------------------------------------------------------------
# OCR Configuration
# -------------------------------------------------------------------
# auto, deepseek, tesseract
OCR_BACKEND=auto

# DeepSeek OCR (si GPU disponible)
DEEPSEEK_MODEL_PATH=/models/deepseek-ocr

# -------------------------------------------------------------------
# Monitoring & Logging
# -------------------------------------------------------------------
# Sentry (error tracking)
SENTRY_DSN=

# Log Level: debug, info, warning, error, critical
LOG_LEVEL=info

# -------------------------------------------------------------------
# Security
# -------------------------------------------------------------------
# Secret key pour signatures
SECRET_KEY=your-secret-key-change-me

# CORS (si API externe)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# -------------------------------------------------------------------
# Backup Configuration
# -------------------------------------------------------------------
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# -------------------------------------------------------------------
# SSL/TLS Configuration (si nginx)
# -------------------------------------------------------------------
# ENABLE_SSL=True
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===================================================================
# NOTES
# ===================================================================
#
# SÉCURITÉ:
#   - NE COMMITEZ JAMAIS ce fichier avec vos vraies valeurs
#   - Utilisez des mots de passe forts
#   - Changez tous les mots de passe par défaut
#
# PRODUCTION:
#   - Configurez SMTP pour les emails
#   - Activez Sentry pour le monitoring
#   - Configurez les backups automatiques
#   - Utilisez SSL/TLS (HTTPS)
#
# ===================================================================
