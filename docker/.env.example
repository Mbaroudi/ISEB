# Configuration Environment Variables for ISEB Accounting Platform
# Copy this file to .env and adjust values for your environment

# ===========================
# PostgreSQL Configuration
# ===========================
POSTGRES_DB=iseb_prod
POSTGRES_USER=odoo_user
POSTGRES_PASSWORD=change_me_in_production_strong_password_123

# ===========================
# Redis Configuration
# ===========================
REDIS_PASSWORD=change_me_redis_password_456

# ===========================
# Odoo Configuration
# ===========================
ODOO_VERSION=17.0
ODOO_ADMIN_PASSWD=change_me_master_password_789
ODOO_DB_FILTER=^iseb_.*$
ODOO_WORKERS=4
ODOO_MAX_CRON_THREADS=2

# ===========================
# PgAdmin Configuration (Dev only)
# ===========================
PGADMIN_EMAIL=admin@iseb-accounting.fr
PGADMIN_PASSWORD=admin_password_pgadmin

# ===========================
# Grafana Configuration
# ===========================
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_admin_password

# ===========================
# Application Settings
# ===========================
# Environment: development, staging, production
APP_ENV=development

# Domain name (for production)
DOMAIN_NAME=accounting.iseb.fr

# Timezone
TZ=Europe/Paris

# ===========================
# Security Settings
# ===========================
# Enable/disable SSL (true/false)
SSL_ENABLED=false

# Let's Encrypt email for SSL certificates
LETSENCRYPT_EMAIL=admin@iseb-accounting.fr

# ===========================
# Backup Configuration
# ===========================
BACKUP_SCHEDULE="@daily"
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6

# ===========================
# Monitoring
# ===========================
# Enable monitoring stack (true/false)
MONITORING_ENABLED=false

# ===========================
# External API Keys (for integrations)
# ===========================
# Budget Insight API
BUDGET_INSIGHT_CLIENT_ID=your_client_id
BUDGET_INSIGHT_CLIENT_SECRET=your_client_secret
BUDGET_INSIGHT_API_URL=https://api.budgetinsight.com

# Bridge API (alternative)
BRIDGE_CLIENT_ID=your_bridge_client_id
BRIDGE_CLIENT_SECRET=your_bridge_client_secret
BRIDGE_API_URL=https://api.bridgeapi.io

# PayFit API (for payroll integration)
PAYFIT_API_KEY=your_payfit_api_key
PAYFIT_API_URL=https://api.payfit.com

# Yousign API (for electronic signature)
YOUSIGN_API_KEY=your_yousign_api_key
YOUSIGN_API_URL=https://api.yousign.com

# Google Vision API (for OCR)
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# ===========================
# SMTP Configuration (for emails)
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@iseb-accounting.fr
SMTP_PASSWORD=smtp_password
SMTP_TLS=true
SMTP_SSL=false

# ===========================
# Logging
# ===========================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================
# Performance Tuning
# ===========================
# Max upload size (in MB)
MAX_UPLOAD_SIZE=100

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# Worker processes (adjust based on CPU cores)
# Recommended: 2 * CPU_CORES + 1
WORKERS=4

# Max cron threads
MAX_CRON_THREADS=2

# ===========================
# Development Settings
# ===========================
# Enable debug mode (true/false) - NEVER use in production!
DEBUG_MODE=false

# Enable auto-reload on code changes (development only)
AUTO_RELOAD=false

# ===========================
# Notes
# ===========================
# - ALWAYS change default passwords in production!
# - Keep this file secure and never commit sensitive data to git
# - Use strong passwords (minimum 16 characters, mixed case, numbers, symbols)
# - For production, consider using environment variables from secret management systems
