<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension de la vue formulaire account.move -->
    <record id="view_move_form_questions" model="ir.ui.view">
        <field name="name">account.move.form.questions</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ajoute un bouton dans le button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_view_questions" icon="fa-comments"
                        attrs="{'invisible': [('question_count', '=', 0)]}">
                    <field string="Questions" name="question_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="object"
                        name="action_create_question" icon="fa-question-circle"
                        string="Poser une question"
                        attrs="{'invisible': [('state', '=', 'draft')]}"/>
            </xpath>

            <!-- Badge pour questions en attente -->
            <xpath expr="//field[@name='name']" position="after">
                <div class="alert alert-warning" role="alert"
                     attrs="{'invisible': [('has_pending_questions', '=', False)]}">
                    <i class="fa fa-exclamation-triangle"/> Cette pièce comptable a des questions en attente de réponse.
                    <button type="object" name="action_view_questions" class="btn-link">
                        Voir les questions
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
