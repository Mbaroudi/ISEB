<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste tâches -->
    <record id="view_cabinet_task_tree" model="ir.ui.view">
        <field name="name">cabinet.task.tree</field>
        <field name="model">cabinet.task</field>
        <field name="arch" type="xml">
            <tree string="Tâches Cabinet" decoration-danger="is_overdue" decoration-muted="state in ['done', 'cancelled']">
                <field name="priority" widget="priority"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="task_type"/>
                <field name="assigned_to_id" widget="many2one_avatar_user"/>
                <field name="deadline"/>
                <field name="is_overdue" invisible="1"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" 
                       decoration-info="state == 'in_progress'" decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Vue kanban tâches -->
    <record id="view_cabinet_task_kanban" model="ir.ui.view">
        <field name="name">cabinet.task.kanban</field>
        <field name="model">cabinet.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="is_overdue"/>
                <field name="assigned_to_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id"/>
                                <t t-if="record.deadline.raw_value">
                                    <br/>
                                    <i class="fa fa-calendar"/> <field name="deadline"/>
                                    <t t-if="record.is_overdue.raw_value">
                                        <span class="text-danger"> (En retard)</span>
                                    </t>
                                </t>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="task_type" widget="badge"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="assigned_to_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue formulaire tâches -->
    <record id="view_cabinet_task_form" model="ir.ui.view">
        <field name="name">cabinet.task.form</field>
        <field name="model">cabinet.task</field>
        <field name="arch" type="xml">
            <form string="Tâche Cabinet">
                <header>
                    <button name="action_start" string="Démarrer" type="object" 
                            class="oe_highlight" invisible="state != 'todo'"/>
                    <button name="action_complete" string="Terminer" type="object" 
                            class="oe_highlight" invisible="state == 'done'"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            invisible="state in ['done', 'cancelled']"/>
                    <button name="action_reopen" string="Réouvrir" type="object" 
                            invisible="state not in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="todo,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre de la tâche..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="assigned_to_id" widget="many2one_avatar_user"/>
                            <field name="task_type"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                            <field name="is_overdue" invisible="1"/>
                            <field name="started_date" readonly="1"/>
                            <field name="completed_date" readonly="1"/>
                            <field name="estimated_hours"/>
                            <field name="spent_hours"/>
                        </group>
                    </group>
                    
                    <group string="Éléments liés">
                        <field name="document_id"/>
                        <field name="expense_id"/>
                        <field name="tva_declaration_id"/>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description détaillée de la tâche..."/>
                        </page>
                        <page string="Notes internes">
                            <field name="internal_notes" placeholder="Notes internes visibles uniquement par le cabinet..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Filtres et recherche -->
    <record id="view_cabinet_task_search" model="ir.ui.view">
        <field name="name">cabinet.task.search</field>
        <field name="model">cabinet.task</field>
        <field name="arch" type="xml">
            <search string="Rechercher tâches">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="assigned_to_id"/>
                <filter string="Mes tâches" name="my_tasks" 
                        domain="[('assigned_to_id', '=', uid)]"/>
                <filter string="En retard" name="overdue" 
                        domain="[('is_overdue', '=', True)]"/>
                <filter string="À faire" name="todo" 
                        domain="[('state', '=', 'todo')]"/>
                <filter string="En cours" name="in_progress" 
                        domain="[('state', '=', 'in_progress')]"/>
                <filter string="Cette semaine" name="this_week"
                        domain="[('deadline', '&gt;=', (context_today() + relativedelta(weeks=-1)).strftime('%Y-%m-%d')),
                                ('deadline', '&lt;=', (context_today() + relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Haute priorité" name="high_priority" 
                        domain="[('priority', 'in', ['2', '3'])]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Assigné à" name="group_assigned" context="{'group_by': 'assigned_to_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'task_type'}"/>
                    <filter string="Échéance" name="group_deadline" context="{'group_by': 'deadline'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action tâches -->
    <record id="action_cabinet_tasks" model="ir.actions.act_window">
        <field name="name">Tâches</field>
        <field name="res_model">cabinet.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_tasks': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune tâche trouvée
            </p>
            <p>
                Créez votre première tâche pour commencer le suivi.
            </p>
        </field>
    </record>
</odoo>
