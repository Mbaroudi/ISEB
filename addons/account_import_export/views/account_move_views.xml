<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajoute les champs d'import aux pièces comptables -->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="imported_from" readonly="1" attrs="{'invisible': [('imported_from', '=', False)]}"/>
                <field name="import_date" readonly="1" attrs="{'invisible': [('import_date', '=', False)]}"/>
                <field name="import_format" readonly="1" attrs="{'invisible': [('import_format', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Filtre pour voir les pièces importées -->
    <record id="view_account_move_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="after">
                <separator/>
                <filter string="Importées" name="imported" domain="[('imported_from', '!=', False)]"/>
                <filter string="Créées manuellement" name="manual" domain="[('imported_from', '=', False)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Format d'import" name="group_import_format" context="{'group_by': 'import_format'}"/>
            </xpath>
        </field>
    </record>
</odoo>
