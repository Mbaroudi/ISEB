<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_import_wizard_form" model="ir.ui.view">
        <field name="name">account.import.wizard.form</field>
        <field name="model">account.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import de données comptables">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="state" widget="statusbar" statusbar_visible="draft,validated,imported"/>
                        </h1>
                    </div>

                    <group name="file_selection" attrs="{'invisible': [('state', 'in', ['imported', 'error'])]}">
                        <group>
                            <field name="file_data" filename="file_name" required="1"/>
                            <field name="file_name" invisible="1"/>
                            <field name="file_format"/>
                        </group>
                        <group>
                            <field name="validate_before_import"/>
                            <field name="auto_create_accounts"/>
                            <field name="auto_create_partners"/>
                        </group>
                    </group>

                    <group name="help" attrs="{'invisible': [('state', '!=', 'draft')]}">
                        <div class="alert alert-info" role="alert">
                            <h4>Formats supportés :</h4>
                            <ul>
                                <li><strong>FEC</strong> : Fichier des Écritures Comptables (format officiel France)</li>
                                <li><strong>XIMPORT</strong> : Format universel Ciel/EBP/Sage</li>
                                <li><strong>CSV</strong> : Format tableur</li>
                            </ul>
                            <p>Le format sera détecté automatiquement selon le nom et le contenu du fichier.</p>
                        </div>
                    </group>

                    <group name="result" attrs="{'invisible': [('result_message', '=', False)]}">
                        <field name="result_message" nolabel="1" colspan="2"/>
                        <group attrs="{'invisible': [('state', 'not in', ['validated', 'imported'])]}">
                            <field name="success_count" readonly="1"/>
                            <field name="error_count" readonly="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_validate"
                            string="Valider"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_import"
                            string="Importer"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['imported', 'error'])]}"/>
                    <button name="action_close"
                            string="Fermer"
                            type="object"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_import_wizard" model="ir.actions.act_window">
        <field name="name">Importer des données comptables</field>
        <field name="res_model">account.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
