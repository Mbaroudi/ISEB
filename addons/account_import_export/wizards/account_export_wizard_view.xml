<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_export_wizard_form" model="ir.ui.view">
        <field name="name">account.export.wizard.form</field>
        <field name="model">account.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export de données comptables">
                <sheet>
                    <div class="oe_title">
                        <h1>Export de données comptables</h1>
                    </div>

                    <group name="configuration" attrs="{'invisible': [('state', '=', 'done')]}">
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="export_format"/>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <group name="help" attrs="{'invisible': [('state', '=', 'done')]}">
                        <div class="alert alert-info" role="alert">
                            <h4>Formats d'export disponibles :</h4>
                            <ul>
                                <li>
                                    <strong>FEC (Fichier des Écritures Comptables)</strong> :
                                    Format officiel obligatoire en France depuis 2014.
                                    Requis pour les contrôles fiscaux.
                                    Nom du fichier : SIRENFECAAAAMMJJ.txt
                                </li>
                                <li>
                                    <strong>XIMPORT</strong> :
                                    Format universel compatible avec Ciel, EBP, Sage.
                                    Idéal pour la migration vers/depuis ces logiciels.
                                    Nom du fichier : XIMPORT.TXT
                                </li>
                            </ul>
                            <p class="text-muted">
                                L'export inclut toutes les écritures comptables validées (état "Comptabilisé")
                                de la période sélectionnée.
                            </p>
                        </div>
                    </group>

                    <group name="files" attrs="{'invisible': [('state', '!=', 'done')]}">
                        <div class="alert alert-success" role="alert">
                            <h4>✓ Export terminé avec succès</h4>
                            <p>Les fichiers sont prêts à être téléchargés.</p>
                        </div>

                        <group attrs="{'invisible': [('fec_file', '=', False)]}">
                            <label for="fec_file" string="Fichier FEC"/>
                            <div>
                                <field name="fec_file" filename="fec_filename" widget="binary"/>
                                <field name="fec_filename" invisible="1"/>
                            </div>
                        </group>

                        <group attrs="{'invisible': [('ximport_file', '=', False)]}">
                            <label for="ximport_file" string="Fichier XIMPORT"/>
                            <div>
                                <field name="ximport_file" filename="ximport_filename" widget="binary"/>
                                <field name="ximport_filename" invisible="1"/>
                            </div>
                        </group>
                    </group>

                    <field name="state" invisible="1"/>
                </sheet>

                <footer>
                    <button name="action_generate"
                            string="Générer"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'done')]}"/>
                    <button name="action_close"
                            string="Fermer"
                            type="object"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_export_wizard" model="ir.actions.act_window">
        <field name="name">Exporter des données comptables</field>
        <field name="res_model">account.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
