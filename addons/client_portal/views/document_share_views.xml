<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- Vue Formulaire - Partage Document             -->
    <!-- ============================================== -->
    <record id="view_document_share_form" model="ir.ui.view">
        <field name="name">client.document.share.form</field>
        <field name="model">client.document.share</field>
        <field name="arch" type="xml">
            <form string="Partage de Document">
                <header>
                    <button name="action_revoke"
                            string="Révoquer"
                            type="object"
                            class="btn-danger"
                            confirm="Êtes-vous sûr de vouloir révoquer ce partage ?"
                            attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                    <button name="action_send_by_email"
                            string="Envoyer par email"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                    <button name="action_copy_link"
                            string="Copier le lien"
                            type="object"
                            attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,expired,revoked"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_access_logs"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-eye">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="access_count" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Accès</span>
                            </div>
                        </button>
                    </div>

                    <div class="alert alert-warning" role="alert" attrs="{'invisible': [('is_expired', '=', False)]}">
                        <i class="fa fa-exclamation-triangle"/> Ce lien de partage a expiré.
                    </div>

                    <div class="alert alert-danger" role="alert" attrs="{'invisible': [('is_access_limited', '=', False)]}">
                        <i class="fa fa-ban"/> La limite d'accès a été atteinte.
                    </div>

                    <group>
                        <group string="Document">
                            <field name="document_id"/>
                            <field name="name" invisible="1"/>
                        </group>
                        <group string="Partage">
                            <field name="shared_by_id" readonly="1"/>
                            <field name="create_date" readonly="1" string="Date de création"/>
                        </group>
                    </group>

                    <group string="Lien de Partage">
                        <field name="access_token" readonly="1" password="True"/>
                        <field name="share_url" readonly="1" widget="url"/>
                    </group>

                    <notebook>
                        <page string="Configuration" name="config">
                            <group>
                                <group string="Expiration">
                                    <field name="expiration_date"/>
                                    <field name="is_expired" invisible="1"/>
                                </group>
                                <group string="Limite d'accès">
                                    <field name="max_access_count"/>
                                    <field name="access_count" readonly="1"/>
                                    <field name="is_access_limited" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Protection">
                                    <field name="password" password="True"/>
                                    <field name="has_password" invisible="1"/>
                                </group>
                                <group string="Permissions">
                                    <field name="can_download"/>
                                    <field name="can_preview"/>
                                </group>
                            </group>
                        </page>

                        <page string="Destinataire" name="recipient">
                            <group>
                                <field name="shared_with_name"/>
                                <field name="shared_with_email" widget="email"/>
                            </group>
                        </page>

                        <page string="Historique Accès" name="access_log">
                            <group>
                                <field name="last_access_date" readonly="1"/>
                                <field name="last_access_ip" readonly="1"/>
                                <field name="last_access_user_agent" readonly="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes sur ce partage..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Vue Liste - Partages                          -->
    <!-- ============================================== -->
    <record id="view_document_share_tree" model="ir.ui.view">
        <field name="name">client.document.share.tree</field>
        <field name="model">client.document.share</field>
        <field name="arch" type="xml">
            <tree string="Partages de Documents"
                  decoration-success="state == 'active' and not is_expired"
                  decoration-warning="is_expired"
                  decoration-danger="state == 'revoked'"
                  decoration-muted="is_access_limited">
                <field name="create_date" string="Créé le"/>
                <field name="document_id"/>
                <field name="shared_with_name"/>
                <field name="shared_with_email"/>
                <field name="expiration_date"/>
                <field name="is_expired" invisible="1"/>
                <field name="access_count"/>
                <field name="max_access_count"/>
                <field name="is_access_limited" invisible="1"/>
                <field name="has_password" widget="boolean_toggle"/>
                <field name="can_download" widget="boolean_toggle"/>
                <field name="last_access_date"/>
                <field name="state"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'expired'"
                       decoration-danger="state == 'revoked'"
                       widget="badge"/>
                <field name="shared_by_id" widget="many2one_avatar_user"/>
                <button name="action_copy_link"
                        string="Copier"
                        type="object"
                        icon="fa-clipboard"
                        attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                <button name="action_revoke"
                        string="Révoquer"
                        type="object"
                        icon="fa-ban"
                        confirm="Révoquer ce partage ?"
                        attrs="{'invisible': [('state', '=', 'revoked')]}"/>
            </tree>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Vue Kanban - Partages                         -->
    <!-- ============================================== -->
    <record id="view_document_share_kanban" model="ir.ui.view">
        <field name="name">client.document.share.kanban</field>
        <field name="model">client.document.share</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="document_id"/>
                <field name="shared_with_name"/>
                <field name="expiration_date"/>
                <field name="is_expired"/>
                <field name="access_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="document_id"/>
                                    </strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="shared_with_name"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span t-attf-class="badge badge-#{record.is_expired.raw_value ? 'danger' : 'success'}">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-clock-o"/> Expire: <field name="expiration_date" widget="date"/>
                                </div>
                                <div>
                                    <i class="fa fa-eye"/> <field name="access_count"/> accès
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <button name="action_copy_link"
                                            string="Copier lien"
                                            type="object"
                                            class="btn btn-sm btn-primary">
                                        <i class="fa fa-clipboard"/>
                                    </button>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'avatar_128', record.shared_by_id.raw_value)"
                                         class="oe_avatar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Vue Recherche - Partages                      -->
    <!-- ============================================== -->
    <record id="view_document_share_search" model="ir.ui.view">
        <field name="name">client.document.share.search</field>
        <field name="model">client.document.share</field>
        <field name="arch" type="xml">
            <search string="Rechercher Partages">
                <field name="document_id"/>
                <field name="shared_with_name"/>
                <field name="shared_with_email"/>
                <field name="access_token"/>
                <separator/>
                <filter name="filter_active" string="Actif"
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_expired" string="Expiré"
                        domain="[('is_expired', '=', True)]"/>
                <filter name="filter_revoked" string="Révoqué"
                        domain="[('state', '=', 'revoked')]"/>
                <separator/>
                <filter name="filter_with_password" string="Avec mot de passe"
                        domain="[('has_password', '=', True)]"/>
                <filter name="filter_accessed" string="Déjà accédé"
                        domain="[('access_count', '>', 0)]"/>
                <filter name="filter_never_accessed" string="Jamais accédé"
                        domain="[('access_count', '=', 0)]"/>
                <separator/>
                <filter name="filter_my_shares" string="Mes partages"
                        domain="[('shared_by_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter name="group_document" string="Document"
                            context="{'group_by': 'document_id'}"/>
                    <filter name="group_state" string="État"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_shared_by" string="Partagé par"
                            context="{'group_by': 'shared_by_id'}"/>
                    <filter name="group_date" string="Date création"
                            context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Action - Partages                             -->
    <!-- ============================================== -->
    <record id="action_document_share" model="ir.actions.act_window">
        <field name="name">Partages de Documents</field>
        <field name="res_model">client.document.share</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau partage
            </p>
            <p>
                Partagez vos documents en toute sécurité avec des liens temporaires.
            </p>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Extension Vue Document - Bouton Partage       -->
    <!-- ============================================== -->
    <record id="view_client_document_form_share" model="ir.ui.view">
        <field name="name">client.document.form.share</field>
        <field name="model">client.document</field>
        <field name="inherit_id" ref="client_portal.view_client_document_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter bouton Partage dans button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_create_share"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-share-alt">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="share_ids" widget="statinfo" nolabel="1"/>
                        </span>
                        <span class="o_stat_text">Partages</span>
                    </div>
                </button>
            </xpath>

            <!-- Ajouter page Partages dans notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Partages" name="shares_page">
                    <field name="share_ids" nolabel="1">
                        <tree decoration-success="state == 'active'"
                              decoration-warning="is_expired"
                              decoration-danger="state == 'revoked'">
                            <field name="create_date"/>
                            <field name="shared_with_name"/>
                            <field name="expiration_date"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="access_count"/>
                            <field name="state" widget="badge"/>
                            <button name="action_copy_link"
                                    string="Copier"
                                    type="object"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Menu - Partages                               -->
    <!-- ============================================== -->
    <menuitem
        id="menu_document_shares"
        name="Partages"
        parent="menu_client_documents_root"
        action="action_document_share"
        sequence="25"/>

</odoo>
