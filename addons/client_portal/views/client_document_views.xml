<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire document -->
    <record id="view_client_document_form" model="ir.ui.view">
        <field name="name">client.document.form</field>
        <field name="model">client.document</field>
        <field name="arch" type="xml">
            <form string="Document Client">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Valider" type="object" 
                            class="oe_highlight" invisible="state != 'pending'"
                            groups="cabinet_portal.group_cabinet_accountant"/>
                    <button name="action_reject" string="Rejeter" type="object" 
                            invisible="state not in ['pending', 'submitted']"
                            groups="cabinet_portal.group_cabinet_accountant"/>
                    <button name="action_reset_draft" string="Remettre en brouillon" 
                            type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,pending,validated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_download" type="object" 
                                class="oe_stat_button" icon="fa-download"
                                invisible="not file_data">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Télécharger</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du document..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="document_type"/>
                            <field name="document_date"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="uploaded_date" readonly="1"/>
                            <field name="validated_date" readonly="1" 
                                   invisible="state != 'validated'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Fichier" name="file">
                            <group>
                                <field name="file_data" filename="file_name" widget="binary"/>
                                <field name="file_name" invisible="1"/>
                                <field name="file_size" widget="integer" readonly="1"/>
                                <field name="mime_type" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Informations" name="info">
                            <group>
                                <field name="notes" placeholder="Notes ou description du document..."/>
                            </group>
                            
                            <group string="Validation" invisible="state not in ['validated', 'rejected']">
                                <field name="validated_by_id" readonly="1"/>
                                <field name="rejection_reason" readonly="1" 
                                       invisible="state != 'rejected'"/>
                            </group>
                        </page>
                        
                        <page string="Données OCR" name="ocr" 
                              invisible="not ocr_data or document_type not in ['invoice', 'justificatif']">
                            <group string="Données extraites automatiquement">
                                <field name="ocr_data" widget="text"/>
                                <field name="ocr_confidence" widget="percentage" readonly="1"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p>Ces données ont été extraites automatiquement par OCR.</p>
                                <p>Vérifiez leur exactitude avant validation.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste document -->
    <record id="view_client_document_tree" model="ir.ui.view">
        <field name="name">client.document.tree</field>
        <field name="model">client.document</field>
        <field name="arch" type="xml">
            <tree string="Documents Client" decoration-muted="state == 'rejected'" 
                  decoration-success="state == 'validated'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="document_type"/>
                <field name="document_date"/>
                <field name="file_size" widget="integer"/>
                <field name="uploaded_date"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'validated'" 
                       decoration-info="state == 'pending'"
                       decoration-warning="state == 'submitted'"
                       decoration-danger="state == 'rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Vue kanban document -->
    <record id="view_client_document_kanban" model="ir.ui.view">
        <field name="name">client.document.kanban</field>
        <field name="model">client.document</field>
        <field name="arch" type="xml">
            <kanban default_group_by="document_type" class="o_kanban_mobile">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="document_type"/>
                <field name="document_date"/>
                <field name="state"/>
                <field name="file_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" 
                                       options="{'classes': {'validated': 'success', 'rejected': 'danger', 
                                                             'pending': 'info', 'submitted': 'warning'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-user"/> <field name="partner_id"/></div>
                                <div><i class="fa fa-calendar"/> <field name="document_date"/></div>
                                <div class="text-muted">
                                    <i class="fa fa-file-o"/> <field name="file_name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche/filtres -->
    <record id="view_client_document_search" model="ir.ui.view">
        <field name="name">client.document.search</field>
        <field name="model">client.document</field>
        <field name="arch" type="xml">
            <search string="Rechercher Documents">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="document_type"/>
                <filter string="À soumettre" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="En attente" name="pending"
                        domain="[('state', 'in', ['pending', 'submitted'])]"/>
                <filter string="Validés" name="validated"
                        domain="[('state', '=', 'validated')]"/>
                <filter string="Rejetés" name="rejected"
                        domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Ce mois" name="this_month"
                        domain="[('document_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d')),
                                ('document_date', '&lt;=', ((context_today().replace(day=1) + relativedelta(months=1, days=-1)).strftime('%Y-%m-%d')))]"/>
                <separator/>
                <filter string="Factures" name="invoices"
                        domain="[('document_type', '=', 'invoice')]"/>
                <filter string="Contrats" name="contracts"
                        domain="[('document_type', '=', 'contract')]"/>
                <filter string="Justificatifs" name="justificatifs"
                        domain="[('document_type', '=', 'justificatif')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'document_type'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'document_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action documents -->
    <record id="action_client_documents" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">client.document</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun document trouvé
            </p>
            <p>
                Déposez vos documents (factures, contrats, justificatifs) pour validation par votre cabinet comptable.
            </p>
            <p>
                <button type="action" class="btn-primary" name="%(action_client_documents)d" context="{'form_view_initial_mode': 'edit'}">
                    Déposer un document
                </button>
            </p>
        </field>
    </record>
</odoo>
