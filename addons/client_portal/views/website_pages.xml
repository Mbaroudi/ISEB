<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="iseb_homepage" name="ISEB Homepage">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-vcss="001" data-snippet="s_cover" data-name="Cover" style="background-image: url('/web/image/website.s_cover_default'); background-attachment: fixed;">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default'); background-attachment: fixed;"/>
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-7 pt32 pb32">
                                <h1 class="display-3 text-white">
                                    <strong>La comptabilité en temps réel</strong>
                                </h1>
                                <p class="lead text-white-50 mt-3">
                                    Expert-comptable 100% en ligne pour entrepreneurs et TPE/PME. Tableau de bord en temps réel, synchronisation bancaire automatique, et accompagnement personnalisé.
                                </p>
                                <div class="mt-4">
                                    <a href="/web/signup" class="btn btn-primary btn-lg me-2">
                                        <i class="fa fa-rocket"/> Commencer gratuitement
                                    </a>
                                    <a href="/contactus" class="btn btn-outline-light btn-lg">
                                        <i class="fa fa-phone"/> Nous contacter
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="s_features pt48 pb48 bg-light" data-snippet="s_features">
                    <div class="container">
                        <div class="row mb-5">
                            <div class="col-lg-12 text-center">
                                <h2 class="display-4">
                                    <strong>Tout pour piloter votre activité</strong>
                                </h2>
                                <p class="lead text-muted">Une plateforme complète pour gérer votre comptabilité sereinement</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-dashboard fa-4x text-primary"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Dashboard Temps Réel</strong>
                                        </h4>
                                        <p class="card-text">Suivez votre trésorerie, CA, charges et résultats en temps réel. Graphiques interactifs et indicateurs clés.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-refresh fa-4x text-success"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Synchro Bancaire Auto</strong>
                                        </h4>
                                        <p class="card-text">Connexion sécurisée à votre banque. Synchronisation automatique des transactions et rapprochement intelligent.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-file-text fa-4x text-warning"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Gestion Documents</strong>
                                        </h4>
                                        <p class="card-text">Déposez vos factures et justificatifs en un clic. OCR automatique pour extraction des données.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-receipt fa-4x text-info"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Notes de Frais</strong>
                                        </h4>
                                        <p class="card-text">Photographiez vos tickets et reçus. Validation automatique et remboursement rapide.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-line-chart fa-4x text-danger"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Prévisions</strong>
                                        </h4>
                                        <p class="card-text">Simulation d'impôt, prévision de trésorerie et analyses financières personnalisées.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            <i class="fa fa-users fa-4x text-purple"/>
                                        </div>
                                        <h4 class="card-title">
                                            <strong>Expert-Comptable Dédié</strong>
                                        </h4>
                                        <p class="card-text">Un expert-comptable référent pour vous accompagner. Chat en direct et visio sur demande.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="s_call_to_action pt48 pb48 bg-primary">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-8">
                                <h2 class="text-white">
                                    <strong>Prêt à simplifier votre comptabilité ?</strong>
                                </h2>
                                <p class="text-white-50 lead">
                                    Rejoignez les milliers d'entrepreneurs qui nous font confiance
                                </p>
                            </div>
                            <div class="col-lg-4 text-end">
                                <a href="/my/home" class="btn btn-light btn-lg">
                                    <i class="fa fa-sign-in"/> Accéder à mon espace
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="s_pricing pt48 pb48">
                    <div class="container">
                        <div class="row mb-5">
                            <div class="col-lg-12 text-center">
                                <h2 class="display-4">
                                    <strong>Nos Formules</strong>
                                </h2>
                                <p class="lead text-muted">Des tarifs transparents, sans engagement</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="card shadow">
                                    <div class="card-header bg-light text-center">
                                        <h4>
                                            <strong>Liberté</strong>
                                        </h4>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="display-4 text-primary mb-3">
                                            <strong>200€</strong>
                                        </div>
                                        <p class="text-muted">/mois HT</p>
                                        <ul class="list-unstyled mt-4">
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Dashboard temps réel
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Synchro bancaire
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Déclarations TVA
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Support email
                                            </li>
                                        </ul>
                                        <a href="/web/signup" class="btn btn-outline-primary btn-block mt-4">Choisir</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card shadow border-primary">
                                    <div class="card-header bg-primary text-white text-center">
                                        <h4>
                                            <strong>Sérénité</strong>
                                        </h4>
                                        <span class="badge bg-warning">Populaire</span>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="display-4 text-primary mb-3">
                                            <strong>350€</strong>
                                        </div>
                                        <p class="text-muted">/mois HT</p>
                                        <ul class="list-unstyled mt-4">
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Tout Liberté +
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Expert-comptable dédié
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Bilan annuel
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Prévisions trésorerie
                                            </li>
                                        </ul>
                                        <a href="/web/signup" class="btn btn-primary btn-block mt-4">Choisir</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="card shadow">
                                    <div class="card-header bg-light text-center">
                                        <h4>
                                            <strong>PME</strong>
                                        </h4>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="display-4 text-primary mb-3">
                                            <strong>500€</strong>
                                        </div>
                                        <p class="text-muted">/mois HT</p>
                                        <ul class="list-unstyled mt-4">
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Tout Sérénité +
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Multi-utilisateurs
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Gestion paie
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-success"/> Support prioritaire
                                            </li>
                                        </ul>
                                        <a href="/web/signup" class="btn btn-outline-primary btn-block mt-4">Choisir</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

</odoo>
