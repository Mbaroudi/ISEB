<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Séquence pour les références de documents -->
    <record id="seq_client_document" model="ir.sequence">
        <field name="name">Client Document</field>
        <field name="code">client.document</field>
        <field name="prefix">DOC</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Catégories de documents par défaut -->
    <record id="category_accounting" model="client.document.category">
        <field name="name">Comptabilité</field>
    </record>

    <record id="category_invoices" model="client.document.category">
        <field name="name">Factures</field>
        <field name="parent_id" ref="category_accounting"/>
    </record>

    <record id="category_invoices_suppliers" model="client.document.category">
        <field name="name">Factures fournisseurs</field>
        <field name="parent_id" ref="category_invoices"/>
    </record>

    <record id="category_invoices_customers" model="client.document.category">
        <field name="name">Factures clients</field>
        <field name="parent_id" ref="category_invoices"/>
    </record>

    <record id="category_expenses" model="client.document.category">
        <field name="name">Notes de frais</field>
        <field name="parent_id" ref="category_accounting"/>
    </record>

    <record id="category_receipts" model="client.document.category">
        <field name="name">Reçus</field>
        <field name="parent_id" ref="category_accounting"/>
    </record>

    <record id="category_contracts" model="client.document.category">
        <field name="name">Contrats</field>
    </record>

    <record id="category_legal" model="client.document.category">
        <field name="name">Documents légaux</field>
    </record>

    <record id="category_hr" model="client.document.category">
        <field name="name">Ressources humaines</field>
    </record>

    <record id="category_bank" model="client.document.category">
        <field name="name">Banque</field>
        <field name="parent_id" ref="category_accounting"/>
    </record>

    <record id="category_tax" model="client.document.category">
        <field name="name">Fiscalité</field>
        <field name="parent_id" ref="category_accounting"/>
    </record>

    <!-- Tags par défaut -->
    <record id="tag_urgent" model="client.document.tag">
        <field name="name">Urgent</field>
        <field name="color">1</field>
    </record>

    <record id="tag_important" model="client.document.tag">
        <field name="name">Important</field>
        <field name="color">2</field>
    </record>

    <record id="tag_to_process" model="client.document.tag">
        <field name="name">À traiter</field>
        <field name="color">3</field>
    </record>

    <record id="tag_archived" model="client.document.tag">
        <field name="name">Archivé</field>
        <field name="color">8</field>
    </record>

    <record id="tag_recurring" model="client.document.tag">
        <field name="name">Récurrent</field>
        <field name="color">4</field>
    </record>

    <record id="tag_paid" model="client.document.tag">
        <field name="name">Payé</field>
        <field name="color">10</field>
    </record>

    <record id="tag_pending_payment" model="client.document.tag">
        <field name="name">En attente de paiement</field>
        <field name="color">5</field>
    </record>

    <record id="tag_vat_deductible" model="client.document.tag">
        <field name="name">TVA déductible</field>
        <field name="color">7</field>
    </record>
</odoo>
