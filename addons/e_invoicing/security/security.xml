<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Category: E-Invoicing -->
        <record id="module_category_e_invoicing" model="ir.module.category">
            <field name="name">Electronic Invoicing</field>
            <field name="description">Manage electronic invoicing rights</field>
            <field name="sequence">15</field>
        </record>

        <!-- Group: E-Invoice User -->
        <record id="group_e_invoice_user" model="res.groups">
            <field name="name">E-Invoice User</field>
            <field name="category_id" ref="module_category_e_invoicing"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group: E-Invoice Manager -->
        <record id="group_e_invoice_manager" model="res.groups">
            <field name="name">E-Invoice Manager</field>
            <field name="category_id" ref="module_category_e_invoicing"/>
            <field name="implied_ids" eval="[(4, ref('group_e_invoice_user'))]"/>
        </record>

        <!-- Record rules will be added after models are loaded -->
    </data>
</odoo>
