<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Category: Custom Reporting -->
        <record id="module_category_reporting" model="ir.module.category">
            <field name="name">Custom Reporting</field>
            <field name="description">Manage custom reports rights</field>
            <field name="sequence">16</field>
        </record>

        <!-- Group: Report User -->
        <record id="group_report_user" model="res.groups">
            <field name="name">Report User</field>
            <field name="category_id" ref="module_category_reporting"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group: Report Manager -->
        <record id="group_report_manager" model="res.groups">
            <field name="name">Report Manager</field>
            <field name="category_id" ref="module_category_reporting"/>
            <field name="implied_ids" eval="[(4, ref('group_report_user'))]"/>
        </record>

        <!-- Record rules -->
        <record id="custom_report_company_rule" model="ir.rule">
            <field name="name">Custom Report: multi-company</field>
            <field name="model_id" ref="model_custom_report"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="custom_report_template_company_rule" model="ir.rule">
            <field name="name">Custom Report Template: multi-company</field>
            <field name="model_id" ref="model_custom_report_template"/>
            <field name="domain_force">[]</field>
            <field name="global" eval="True"/>
        </record>
    </data>
</odoo>
