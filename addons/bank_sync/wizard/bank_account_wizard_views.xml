<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_account_wizard_form" model="ir.ui.view">
        <field name="name">bank.account.wizard.form</field>
        <field name="model">bank.account.wizard</field>
        <field name="arch" type="xml">
            <form string="Connexion Bancaire">
                <group invisible="step != 'select_bank'">
                    <field name="provider_id" options="{'no_create': True}"/>
                    <field name="bank_account_id" invisible="1"/>
                    <field name="step" invisible="1"/>
                    <field name="auth_method" widget="radio"/>
                </group>
                <group invisible="step != 'authenticate'">
                    <field name="connection_status" readonly="1"/>
                    <field name="error_message" invisible="connection_status != 'error'"/>
                </group>
                <footer>
                    <button string="Connecter" name="action_start_connection" type="object" class="btn-primary" invisible="step != 'select_bank'"/>
                    <button string="Confirmer" name="action_confirm_connection" type="object" class="btn-primary" invisible="step != 'confirm'"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
