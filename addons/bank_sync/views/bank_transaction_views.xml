<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bank_transaction_tree" model="ir.ui.view">
        <field name="name">bank.sync.transaction.tree</field>
        <field name="model">bank.sync.transaction</field>
        <field name="arch" type="xml">
            <tree string="Transactions" decoration-success="state=='reconciled'" decoration-muted="state=='ignored'"
                  decoration-info="amount &gt; 0" decoration-danger="amount &lt; 0">
                <field name="date"/>
                <field name="name"/>
                <field name="counterpart_name"/>
                <field name="amount" sum="Total" decoration-success="amount &gt; 0" decoration-danger="amount &lt; 0"/>
                <field name="currency_id" invisible="1"/>
                <field name="transaction_type" invisible="1"/>
                <field name="category"/>
                <field name="bank_account_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bank_transaction_form" model="ir.ui.view">
        <field name="name">bank.sync.transaction.form</field>
        <field name="model">bank.sync.transaction</field>
        <field name="arch" type="xml">
            <form string="Transaction">
                <header>
                    <button name="action_reconcile" string="Rapprocher" type="object" class="oe_highlight"
                            invisible="state != 'pending'" icon="fa-link"/>
                    <button name="action_ignore" string="Ignorer" type="object"
                            invisible="state != 'pending'" icon="fa-ban"/>
                    <button name="action_create_invoice" string="Créer Facture" type="object"
                            invisible="state != 'pending'" icon="fa-file-text"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,reconciled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="transaction_id" readonly="1"/>
                            <field name="bank_account_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="value_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                            <field name="transaction_type" readonly="1"/>
                            <field name="category"/>
                        </group>
                    </group>
                    <group string="Contrepartie">
                        <field name="counterpart_name" readonly="1"/>
                        <field name="counterpart_iban" readonly="1"/>
                        <field name="partner_id"/>
                    </group>
                    <group string="Rapprochement" invisible="state == 'pending'">
                        <field name="invoice_id" readonly="state != 'pending'"/>
                        <field name="payment_id" readonly="state != 'pending'"/>
                        <field name="move_line_id" readonly="state != 'pending'"/>
                    </group>
                    <group string="Détails">
                        <field name="description" readonly="1"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_bank_transaction_search" model="ir.ui.view">
        <field name="name">bank.sync.transaction.search</field>
        <field name="model">bank.sync.transaction</field>
        <field name="arch" type="xml">
            <search string="Rechercher Transactions">
                <field name="name" string="Description" filter_domain="['|', ('name','ilike',self), ('counterpart_name','ilike',self)]"/>
                <field name="bank_account_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="En attente" name="pending" domain="[('state','=','pending')]"/>
                <filter string="Rapprochées" name="reconciled" domain="[('state','=','reconciled')]"/>
                <filter string="Crédit" name="credit" domain="[('amount','&gt;',0)]"/>
                <filter string="Débit" name="debit" domain="[('amount','&lt;',0)]"/>
                <separator/>
                <filter string="Ce mois" name="this_month" domain="[('date','&gt;=', (context_today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Mois dernier" name="last_month"
                        domain="[('date','&gt;=', (context_today()-relativedelta(months=1,day=1)).strftime('%Y-%m-%d')),
                                ('date','&lt;', (context_today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Compte" name="group_account" context="{'group_by':'bank_account_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Catégorie" name="group_category" context="{'group_by':'category'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_transaction" model="ir.actions.act_window">
        <field name="name">Transactions</field>
        <field name="res_model">bank.sync.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_month': 1, 'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Aucune transaction
            </p>
            <p>
                Les transactions apparaîtront ici après la première synchronisation.
            </p>
        </field>
    </record>
</odoo>
