<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bank_sync_log_tree" model="ir.ui.view">
        <field name="name">bank.sync.log.tree</field>
        <field name="model">bank.sync.log</field>
        <field name="arch" type="xml">
            <tree string="Logs de Synchronisation" decoration-success="state=='success'" decoration-danger="state=='error'">
                <field name="sync_date"/>
                <field name="bank_account_id"/>
                <field name="state"/>
                <field name="transactions_imported"/>
                <field name="transactions_updated"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bank_sync_log_form" model="ir.ui.view">
        <field name="name">bank.sync.log.form</field>
        <field name="model">bank.sync.log</field>
        <field name="arch" type="xml">
            <form string="Log de Synchronisation" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="bank_account_id"/>
                            <field name="sync_date"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="transactions_imported"/>
                            <field name="transactions_updated"/>
                        </group>
                    </group>
                    <group string="Message">
                        <field name="message" nolabel="1"/>
                    </group>
                    <group string="DÃ©tails Erreur" invisible="state != 'error'">
                        <field name="error_details" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_sync_log" model="ir.actions.act_window">
        <field name="name">Logs de Synchronisation</field>
        <field name="res_model">bank.sync.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
