<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bank_account_tree" model="ir.ui.view">
        <field name="name">bank.sync.account.tree</field>
        <field name="model">bank.sync.account</field>
        <field name="arch" type="xml">
            <tree string="Comptes Bancaires" decoration-success="state=='connected'" decoration-danger="state=='error'">
                <field name="name"/>
                <field name="account_number"/>
                <field name="provider_id"/>
                <field name="balance" sum="Total"/>
                <field name="currency_id" invisible="1"/>
                <field name="last_sync_date"/>
                <field name="state" decoration-success="state=='connected'" decoration-danger="state=='error'"/>
                <field name="sync_enabled"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bank_account_form" model="ir.ui.view">
        <field name="name">bank.sync.account.form</field>
        <field name="model">bank.sync.account</field>
        <field name="arch" type="xml">
            <form string="Compte Bancaire">
                <header>
                    <button name="action_sync_now" string="Synchroniser" type="object" class="oe_highlight"
                            invisible="state != 'connected'" icon="fa-refresh"/>
                    <button name="action_connect" string="Connecter" type="object" class="oe_highlight"
                            invisible="state == 'connected'" icon="fa-plug"/>
                    <button name="action_disconnect" string="Déconnecter" type="object"
                            invisible="state != 'connected'" icon="fa-unlink" confirm="Êtes-vous sûr de vouloir déconnecter ce compte ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,connected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transactions" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="transaction_count" widget="statinfo" string="Transactions"/>
                        </button>
                        <button name="%(action_bank_sync_log)d" type="action" class="oe_stat_button" icon="fa-history" context="{'default_bank_account_id': id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Logs</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Erreur" bg_color="bg-danger" invisible="state != 'error'"/>
                    <widget name="web_ribbon" title="Connecté" bg_color="bg-success" invisible="state != 'connected'"/>

                    <group>
                        <group name="main_info">
                            <field name="name" placeholder="Ex: Compte Courant BNP"/>
                            <field name="provider_id" options="{'no_create': True}"/>
                            <field name="account_type"/>
                            <field name="account_number"/>
                            <field name="iban"/>
                            <field name="bic"/>
                        </group>
                        <group name="financial_info">
                            <field name="balance" widget="monetary"/>
                            <field name="currency_id"/>
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="journal_id" domain="[('type', '=', 'bank')]"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Synchronisation" name="sync">
                            <group>
                                <group>
                                    <field name="sync_enabled"/>
                                    <field name="auto_sync"/>
                                    <field name="sync_frequency" invisible="not auto_sync"/>
                                    <field name="last_sync_date" readonly="1"/>
                                    <field name="last_transaction_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="connection_id" readonly="1"/>
                                    <field name="token_expiry" readonly="1"/>
                                    <field name="pending_count" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Alertes" name="alerts">
                            <group>
                                <field name="alert_enabled"/>
                                <field name="alert_min_balance" widget="monetary" invisible="not alert_enabled"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_bank_account_kanban" model="ir.ui.view">
        <field name="name">bank.sync.account.kanban</field>
        <field name="model">bank.sync.account</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="balance"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="last_sync_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <small class="o_kanban_record_subtitle"><field name="provider_id"/></small>
                                </div>
                                <span class="float-right badge" t-attf-class="badge-#{record.state.raw_value == 'connected' ? 'success' : 'danger'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="balance" widget="monetary"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-clock-o"/> <field name="last_sync_date" widget="relative"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_bank_account_search" model="ir.ui.view">
        <field name="name">bank.sync.account.search</field>
        <field name="model">bank.sync.account</field>
        <field name="arch" type="xml">
            <search string="Rechercher Comptes">
                <field name="name" string="Compte" filter_domain="['|', ('name','ilike',self), ('account_number','ilike',self)]"/>
                <field name="provider_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Connectés" name="connected" domain="[('state','=','connected')]"/>
                <filter string="En erreur" name="error" domain="[('state','=','error')]"/>
                <filter string="Synchronisation active" name="sync_enabled" domain="[('sync_enabled','=',True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Banque" name="group_provider" context="{'group_by':'provider_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Titulaire" name="group_partner" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_account" model="ir.actions.act_window">
        <field name="name">Comptes Bancaires</field>
        <field name="res_model">bank.sync.account</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_connected': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun compte bancaire configuré
            </p>
            <p>
                Cliquez sur <b>Créer</b> pour connecter votre premier compte bancaire.
            </p>
        </field>
    </record>
</odoo>
