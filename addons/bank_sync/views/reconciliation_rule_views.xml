<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_reconciliation_rule_tree" model="ir.ui.view">
        <field name="name">bank.sync.reconciliation.rule.tree</field>
        <field name="model">bank.sync.reconciliation.rule</field>
        <field name="arch" type="xml">
            <tree string="Règles de Rapprochement" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="match_type"/>
                <field name="match_value"/>
                <field name="partner_id"/>
                <field name="category"/>
                <field name="auto_reconcile" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_reconciliation_rule_form" model="ir.ui.view">
        <field name="name">bank.sync.reconciliation.rule.form</field>
        <field name="model">bank.sync.reconciliation.rule</field>
        <field name="arch" type="xml">
            <form string="Règle de Rapprochement">
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                            <field name="match_type"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Critères de Correspondance">
                        <field name="match_value" invisible="match_type in ['amount_range']"/>
                        <field name="match_amount_min" invisible="match_type != 'amount_range'"/>
                        <field name="match_amount_max" invisible="match_type != 'amount_range'"/>
                    </group>
                    <group string="Action Automatique">
                        <group>
                            <field name="partner_id"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="account_id"/>
                            <field name="auto_reconcile"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_reconciliation_rule" model="ir.actions.act_window">
        <field name="name">Règles de Rapprochement</field>
        <field name="res_model">bank.sync.reconciliation.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première règle de rapprochement
            </p>
            <p>
                Les règles permettent d'automatiser le rapprochement des transactions bancaires.
            </p>
        </field>
    </record>
</odoo>
