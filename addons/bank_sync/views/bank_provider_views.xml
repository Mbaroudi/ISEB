<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_provider_tree" model="ir.ui.view">
        <field name="name">bank.sync.provider.tree</field>
        <field name="model">bank.sync.provider</field>
        <field name="arch" type="xml">
            <tree string="Fournisseurs Bancaires">
                <field name="name"/>
                <field name="code"/>
                <field name="api_type"/>
                <field name="country_id"/>
                <field name="supported_features"/>
                <field name="account_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_bank_provider_form" model="ir.ui.view">
        <field name="name">bank.sync.provider.form</field>
        <field name="model">bank.sync.provider</field>
        <field name="arch" type="xml">
            <form string="Fournisseur Bancaire">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la banque"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="country_id"/>
                            <field name="api_type"/>
                        </group>
                        <group>
                            <field name="supported_features"/>
                            <field name="account_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration API" name="api_config">
                            <group>
                                <field name="api_endpoint"/>
                                <field name="api_credentials" password="True"/>
                            </group>
                        </page>
                        <page string="Comptes" name="accounts">
                            <field name="account_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="account_number"/>
                                    <field name="partner_id"/>
                                    <field name="balance"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bank_provider" model="ir.actions.act_window">
        <field name="name">Fournisseurs Bancaires</field>
        <field name="res_model">bank.sync.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un fournisseur bancaire
            </p>
            <p>
                Configurez les connexions avec vos banques pour la synchronisation automatique.
            </p>
        </field>
    </record>
</odoo>
